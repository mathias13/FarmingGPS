<UserControl x:Class="FarmingGPS.Visualization.WorkedAreaBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FarmingGPS.Visualization"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="WorkedAreaControl">
    <Grid Margin="5,5,2,2">
        <Rectangle Fill="White" Width="Auto" Height="Auto" x:Name="_backGround" x:FieldModifier="private" RadiusX="5" RadiusY="5"/>
        <Rectangle Fill="LightGreen" HorizontalAlignment="Left" Width="{Binding WidthPercentage, ElementName=WorkedAreaControl}" Height="Auto" RadiusX="5" RadiusY="5"/>
        <Border Background="Transparent" BorderBrush="Black" BorderThickness="2" CornerRadius="4"/>
        <TextBlock Margin="10,2,10,2" FontSize="20" TextAlignment="Center" Text="{Binding WorkedAreaString,ElementName=WorkedAreaControl}"/>
    </Grid>
</UserControl>
