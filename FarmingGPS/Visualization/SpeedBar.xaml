<UserControl x:Class="FarmingGPS.Visualization.SpeedBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="SpeedBarControl">
    <Grid Margin="5,5,2,2">
        <Border Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="4"/>
        <TextBlock Margin="10,2,10,2" FontSize="20" Text="{Binding SpeedString,ElementName=SpeedBarControl}"/>
    </Grid>
</UserControl>
