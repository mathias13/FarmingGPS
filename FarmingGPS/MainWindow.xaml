<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:visualization="clr-namespace:FarmingGPS.Visualization"
        xmlns:local="clr-namespace:FarmingGPS"
        x:Class="FarmingGPS.MainWindow"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Visualization/Buttons.xaml" />
                <ResourceDictionary Source="Visualization/VisualizationDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="5,5,5,5">
            <Border Style="{StaticResource MenuBorder}"/>
            <visualization:LightBar Grid.Row="0" x:FieldModifier="private" x:Name="_lightBar"/>
        </Grid>
        <visualization:FarmingVisualizer Grid.Row="1" x:FieldModifier="private" x:Name="_visualization"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Right">
            <Button x:Name="BTN_ZOOM_IN" Style="{StaticResource BUTTON_ZOOM_IN}" Width="60" Height="60" Margin="10,10,10,10" Click="BTN_ZOOM_IN_Click"/>
            <Button x:Name="BTN_ZOOM_OUT" Style="{StaticResource BUTTON_ZOOM_OUT}" Width="60" Height="60" Margin="10,10,10,10" Click="BTN_ZOOM_OUT_Click"/>
            <Button x:Name="BTN_VIEW_CHANGE" Style="{StaticResource BUTTON_CAMERA}" Width="60" Height="60" Margin="10,10,10,10" Click="BTN_VIEW_CHANGE_Click"/>
            <Button x:Name="BTN_SETTINGS" Style="{StaticResource BUTTON_TOOLS}" Width="60" Height="60" Margin="10,10,10,10" Click="BTN_SETTINGS_Click"/>
        </StackPanel>
        <visualization:SpeedBar Grid.Row="1" Width="Auto" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Top" x:FieldModifier="private" x:Name="_speedBar"/>
        <TextBlock x:FieldModifier="private" x:Name="_fixMode" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Background="White"/>
        <Border Background="White" BorderThickness="2" CornerRadius="5" Grid.Row="1" Style="{Binding Path=CameraSize, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}" >
            <Image Source="{Binding Path=CameraImage, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}" MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
        </Border>
        <Grid Grid.Row="1" Margin="10,10,70,10" x:Name="_settingsGrid" x:FieldModifier="private" Visibility="Hidden">
            <Border Style="{StaticResource MenuBorder}" Opacity="0.9"/>
            <Grid Margin="10,10,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TreeView>
                        <TreeViewItem Header="test">
                            <TreeViewItem Header="undertest"/>
                        
                        </TreeViewItem>
                        <TreeViewItem Header="test1">
                            
                        </TreeViewItem>
                    </TreeView>
                </Grid>
                <Grid Grid.Column="1" Background="Red">

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
